<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta charset="utf-8" />
    <title>@ViewBag.Title - StackOverflow</title>
    @Styles.Render("~/Content/css")

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            <a class="navbar-brand" href="#"><img src="~/Images/Avatar2.jpg" alt="Alternate Text" width="50" height="50" /> StackOverflow</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav d-flex justify-content-center align-items-center me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        @Html.ActionLink("Home", "Index", "Home",new { } ,new { @class = "nav-link", @id="home"})
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("About", "About", "Home", new { },new { @class = "nav-link", @id="about"})
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Contact", "Contact", "Home", new { },new { @class = "nav-link", @id="contact"})
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="home/contact">Categories</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="home/contact">Questions</a>
                    </li>
                    @if (Session["CurrentUserName"] == null)
                    {
                        <li class="nav-item active">
                            <a class="nav-link" href="/account/login">Login</a>
                        </li>
                        <li class="nav-item active">
                            <a class="nav-link" href="/account/register">Register</a>
                        </li>
                    }

                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <img src="~/Images/Avatar3.jpg" width="50" height="50" />
                        </a>
                        <ul class="dropdown-menu " aria-labelledby="navbarDropdown">
                            <li><a class="dropdown-item" href="/account/logout">Logout</a></li>
                            <li><a class="dropdown-item" href="/account/changeprofile">Change Profile</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" href="/account/changepassword">Change Password</a></li>
                        </ul>
                    </li>

                    @if (Session["CurrentUserName"] != null)
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Dropdown
                                <img src="~/Images/Avatar3.jpg" width="50" height="50" />
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <li><a class="dropdown-item" href="/account/logout">Logout</a></li>
                                <li><a class="dropdown-item" href="/account/changeprofile">Change Profile</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" href="/account/changepassword">Change Password</a></li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#" tabindex="-1" aria-disabled="true">Disabled</a>
                        </li>
                    }
                </ul>
                <form class="d-flex">
                    <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                    <button class="btn btn-outline-success" type="submit">Search</button>
                </form>
            </div>
        </div>
    </nav>
    @Scripts.Render("~/bundles/jquery")
    <div class="container-fluid">
        @RenderBody()
    </div>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4" crossorigin="anonymous"></script>
</body>
</html>